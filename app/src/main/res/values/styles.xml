<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="RootLayout">
        <item name="android:padding">32dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FlagImage">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/flag_background</item>
    </style>

    <style name="CurrencyAmount">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="SwapButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_swap</item>
    </style>

    <style name="CurrencySpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="CurrencyItem" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="CurrencyName" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
    </style>

    <style name="NumPadButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="StatusText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
