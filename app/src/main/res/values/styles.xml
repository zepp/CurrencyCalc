<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="RootLayout">
        <item name="android:padding">32dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FlagImage">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@drawable/flag_background</item>
    </style>

    <style name="CurrencyText">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:background">@drawable/selector_frame</item>
    </style>
</resources>
