<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="32dp"
              tools:context="com.example.pavl.currencycalc.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="32dp">

            <ImageView
                    android:id="@+id/original_flag"
                    style="@style/FlagImage"/>

            <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent"/>

            <EditText
                    android:id="@+id/original_amount"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    style="@style/CurrencyEdit"
                    android:enabled="false"/>

            <Spinner
                    android:id="@+id/original_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"/>

        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        <ImageButton
                android:id="@+id/swap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

        <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="32dp">

            <ImageView
                    android:id="@+id/result_flag"
                    style="@style/FlagImage"/>

            <Space
                    android:layout_width="32dp"
                    android:layout_height="match_parent"/>

            <EditText
                    android:id="@+id/result_amount"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    style="@style/CurrencyEdit"
                    android:enabled="false"/>

            <Spinner
                    android:id="@+id/result_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="64dp"/>

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

        <Button
                android:id="@+id/num_1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="1"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="2"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="3"
                style="@style/NumPadButton"/>


        <Button
                android:id="@+id/num_4"
                android:layout_gravity="fill"
                android:text="4"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_5"
                android:layout_gravity="fill"
                android:text="5"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_6"
                android:layout_gravity="fill"
                android:text="6"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_7"
                android:layout_gravity="fill"
                android:text="7"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_8"
                android:layout_gravity="fill"
                android:text="8"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_9"
                android:layout_gravity="fill"
                android:text="9"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_point"
                android:layout_gravity="fill"
                android:text="."
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/num_0"
                android:layout_gravity="fill"
                android:text="0"
                style="@style/NumPadButton"/>

        <Button
                android:id="@+id/del"
                android:layout_gravity="fill"
                android:text="⇐"
                style="@style/NumPadButton"/>
    </GridLayout>

    <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StatusTextView"/>
    </LinearLayout>

</LinearLayout>
